import pygame
import random

# Initialize Pygame
pygame.init()

# Game Constants
WIDTH, HEIGHT = 500, 600
PLAYER_WIDTH, PLAYER_HEIGHT = 50, 50
BLOCK_WIDTH, BLOCK_HEIGHT = 50, 50
BLOCK_SPEED = 5
BACKGROUND_COLOR = (30, 30, 30)
PLAYER_COLOR = (0, 255, 0)
BLOCK_COLOR = (255, 0, 0)
WHITE = (255, 255, 255)

# Setup Display
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Dodge the Falling Blocks")

# Load Player
player = pygame.Rect(WIDTH//2 - PLAYER_WIDTH/2, HEIGHT - PLAYER_HEIGHT - 10, PLAYER_WIDTH, PLAYER_HEIGHT)

# List for Falling Blocks
blocks = []
score = 0
clock = pygame.time.Clock()

# Game Loop
running = True
while running:
    screen.fill(BACKGROUND_COLOR)
    
    # Event Handling
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Player Movement
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player.x > 0:
        player.x -= 8
    if keys[pygame.K_RIGHT] and player.x < WIDTH - PLAYER_WIDTH:
        player.x += 8

    # Add Falling Blocks
    if random.randint(1, 30) == 1:  # Randomly spawn blocks
        block_x = random.randint(0, WIDTH - BLOCK_WIDTH)
        block = pygame.Rect(block_x, 0, BLOCK_WIDTH, BLOCK_HEIGHT)
        blocks.append(block)

    # Move Blocks
    for block in blocks[:]:
        block.y += BLOCK_SPEED
        if block.y > HEIGHT:  # Remove off-screen blocks
            blocks.remove(block)
            score += 1  # Increase score when blocks are dodged

    # Check Collision
    for block in blocks:
        if player.colliderect(block):
            print(f"Game Over! Final Score: {score}")
            running = False

    # Draw Player & Blocks
    pygame.draw.rect(screen, PLAYER_COLOR, player)
    for block in blocks:
        pygame.draw.rect(screen, BLOCK_COLOR, block)

    # Display Score
    font = pygame.font.Font(None, 36)
    score_text = font.render(f"Score: {score}", True, WHITE)
    screen.blit(score_text, (10, 10))

    pygame.display.flip()
    clock.tick(30)  # FPS

pygame.quit()